{{ extend 'layout' }}

<h1>Update post</h1>

<p>
  <a href="/">Back to main</a>
</p>

<div class="row">
  <div class="span6">
    <form action="/post/{{= @post._id }}" method="POST">
      <input class="span6" type="text" name="title" value="{{= @post.title }}"><br>
      <textarea class="span6" name="content" id="content" cols="30" rows="10">{{- @post.content }}</textarea><br>
      <input type="submit" class="btn btn-large btn-block btn-primary">
    </form>
  </div>
</div>