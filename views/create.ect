{{ extend 'layout' }}

<h1>Create new post</h1>

<p>
  <a href="/">Back to main</a>
</p>

<div class="row">
  <div class="span6">
    <form action="/create" method="POST">
        <input class="span6" type="text" name="title"><br>
        <textarea class="span6" name="content" id="content" cols="30" rows="10"></textarea><br>
        <input type="submit" class="btn btn-large btn-block btn-primary">
    </form>
  </div>
</div>