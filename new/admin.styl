@import "config"
@import "vendors"
@import "mixins"

.popup-holder
  display: none
  fixed: all
  z-index: 1000
  box-align: center
  box-pack: center
  align-items: center
  justify-content: center
  &.active
    display: box
    display: flex
    background: rgba(white, .5)

.blur
  -webkit-filter: blur(3px)
  user-select: none

.new-event
  z-index: 1001
  display: none
  position: relative
  margin: auto
  width: 500px
  padding: 1em
  background: white
  box-shadow: 0 3px 10px rgba(black, .4)
  &.active
    display: block
  .x
    absolute: top right 10px
    font: 12px HEAD_FONT
    background: #eee
    padding: 2px 5px
    &:hover
      background: #444
      color: white
      cursor: pointer
      user-select: none



.new-event-btn
  font: bold 1.5em/1.5em HEAD_FONT
  text-transform: uppercase
  padding: 0.5em
  transition: all .25s ease-in-out
  &:hover
    background: #222
    color: white
  &:active
    background: #800

.input-text
, .input-textarea
, .input-date
  //margin: 0.5em
  padding: 0.5em
  display: box
  display: flex
  input, textarea
    box-flex: 1
    flex: 1
    font: 1em/1.5em "PT Sans"
    border: 1px solid rgba(black, .05)
    padding: 5px
    &:hover
      border: 1px solid #eee
    &:active, &:focus
      border: 1px solid #aaa

.input-select
  //margin: 0.5em

  padding: 0.5em
  display: box
  display: flex
  select
    box-flex: 1
    flex: 1
    -webkit-appearance: listbox
    -moz-appearance: listbox
    -ms-appearance: listbox
    -o-appearance: listbox
    appearance: listbox
    border-radius: 0
    font: 1em/1.5em "PT Sans"
    border: 1px inset rgba(black, .05)
    background: white
    padding: 5px
    &:hover
      border: 1px solid #eee
    &:active, &:focus
      border: 1px solid #aaa

.add-infoline
  font: 2em/0.5em

button
  border: 1px solid transparent
  background: white
  font: 1.125em/1.125em "PT Sans"
  text-shadow: 1px 0 0 white
  padding: 0.75em
  margin: 0.5em
  &:hover
    background: #aaa
    text-shadow: none
  &:active
    color: white
    background: #222
    text-shadow: none