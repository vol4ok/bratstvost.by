@import "_vendors"

-pos(type, args)
  i = 0
  position: unquote(type)
  if args[0] is 'all'
    val = args[1] is a 'unit' ? args[1] : 0
    top: val
    left: val
    right: val
    bottom: val
  else
    if args[i]
      {args[i]}: args[i + 1] is a 'unit' ? args[i += 1] : 0
    if args[i + 1]
      {args[i += 1]}: args[i + 1] is a 'unit' ? args[i += 1] : 0
    if args[i + 1]
      {args[i += 1]}: args[i + 1] is a 'unit' ? args[i += 1] : 0
    if args[i + 1]
      {args[i += 1]}: args[i + 1] is a 'unit' ? args[i += 1] : 0
    
fixed()
  -pos('fixed', arguments)

absolute()
  -pos('absolute', arguments)

relative()
  -pos('relative', arguments)

clearfix()
  *zoom: 1
  &:before, &:after
    display: table
    content: ""
  &:after 
    clear: both

display($arg)
  if $arg is flex
    display: -webkit-flex
    display: -ms-flexbox
  else if $arg is inline-flex
    display: -webkit-inline-flex
  else if $arg is box
    display: -webkit-box
    display: -moz-box
  display: $arg

tab-focus()
  outline: thin dotted
  outline: 5px auto -webkit-focus-ring-color
  outline-offset: -2px

center-block()
  display: block
  margin-left: auto
  margin-right: auto
  
vcenter-block-wrap()
  display: table
  height: 100%

vcenter-block()
  height: 100%
  display: table-cell
  vertical-align: middle
  
container-fixed($width = GRID_ROW_WIDTH)
  width: $width
  margin-left: auto
  margin-right: auto
  clearfix()

size($w, $h)
  width: $w
  height: $h

placeholder($color)
  &::-webkit-input-placeholder 
    color: $color
  &:-moz-placeholder 
    color: $color
  
selection($color)
  &::selection
    background: $color
  &::-moz-selection
    background: $color
  &::-webkit-selection
    background: $color

resizable(direction = both)
  resize: direction
  overflow: auto

unstyled-list()
  list-style: none
  padding: 0
  margin: 0

menu-button()
  cursor: pointer
  user-select: none

icon($w, $h, $url, $block = false)
  if $block
    display: block
  else
    display: inline-block
  width: $w
  height: $h
  background: url($url) no-repeat